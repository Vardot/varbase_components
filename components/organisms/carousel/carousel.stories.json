  "argTypes": {
    "id": {
      "name": "Carousel ID",
      "description": "Set a unique id on the carousel for optional controls, especially if you’re using multiple carousels on a single page.",
      "control": "text",
      "defaultValue": ""
    },
    "slide_component": {
      "name": "Slide component",
      "description": "A component name to render a slide",
      "control": "text",
      "defaultValue": "varbase_components:card-hero"
    },
    "items": {
      "name": "Carousel items",
      "description": "An array of slider items, Each item has (caption, slide, text)",
      "control": "object",
      "defaultValue": []
    },
    "controls": {
      "name": "Controls",
      "description": "Add the previous/next controls.",
      "control": "boolean",
      "defaultValue": true
    },
    "indicators": {
      "name": "Indicators",
      "description": "Add indicators to the carousel, alongside the previous/next controls.",
      "control": "boolean",
      "defaultValue": true
    }
  },
