{
  "title": "Varbase Components/Atoms/Pagination",
  "parameters": {
    "componentSubtitle": "Pagination",
    "docs": {
      "description": {
        "component": "Show pagination to indicate a series of related content exists across multiple pages."
      },
      "story": {
        "inline": true
      }
    }
  },
  "argTypes": {
    "size": {
      "name": "Size",
      "description": "Fancy larger or smaller pagination? Add .pagination-lg or .pagination-sm for additional sizes.",
      "defaultValue": "",
      "control": "select",
      "options": {
        "'- none -'": "",
        "Small": "sm",
        "Large": "lg"
      }
    },
    "alignment": {
      "name": "Alignment",
      "description": "Change the alignment of pagination components with flex box utilities. For example, with .justify-content-center",
      "defaultValue": "",
      "control": "select",
      "options": {
        "'- none -'": "",
        "Start": "start",
        "End": "end",
        "Center": "center",
        "vertical": "vertical"
      }
    },
    "heading_id": {
      "name": "Pagination heading ID.",
      "defaultValue": "",
      "control": "text"
    },
    "items": {
      "name": "List of pager items",
      "description": "The list is keyed by the following elements (first, previous, next, last, pages) which they have href, attributes, text)",
      "control": "array",
      "defaultValue": []
    },
    "current": {
      "name": "Current page",
      "description": "The page number of the current page.",
      "defaultValue": "",
      "control": "text"
    },
    "ellipses": {
      "name": "Ellipses",
      "description": "If there are more pages than the quantity allows, then an ellipsis before or after the listed pages may be present. (previous, next)",
      "control": "array",
      "defaultValue": []
    },
    "utility_classes": {
      "name": "Utility Classes",
      "description": "An array of utility classes. Use to add extra Bootstrap utility classes or custom CSS classes over to this to this component.",
      "control": "array",
      "defaultValue": []
    },
    "attributes": {
      "name": "Title Attributes",
      "description": "HTML attributes for the title element.",
      "control": "object",
      "defaultValue": {}
    }
  },
